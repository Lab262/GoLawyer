<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greyBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyBackground">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lawyerImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/placeholder_image"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_weight="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Troy Beck"
                android:id="@+id/nameLawyer"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="0" />

            <TextView
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:text="Especialista em Direito do Consumidor"
                android:id="@+id/espicialityTextView"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:paddingTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp" />

            <TextView
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:text="OAB/Brasilia/00000"
                android:id="@+id/informtaionTextView"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:paddingTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>