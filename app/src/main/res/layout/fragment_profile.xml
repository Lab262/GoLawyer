<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.ProfileFragment"
    android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/register_profile_photo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/registerProfilePhoto"
                android:layout_gravity="top|center" />

            <include layout="@layout/profile_header_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileHeader"
                android:layout_gravity="top|center" />

            <include layout="@layout/profile_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileInformationHeader"
                android:layout_gravity="top|center" />


        </LinearLayout>

</ScrollView>
