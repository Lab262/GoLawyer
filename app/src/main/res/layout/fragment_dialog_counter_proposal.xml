<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dialog"
    android:weightSum="1">

        <TextView
            android:text="@string/placeholder_dialog_message_proposal"
            android:layout_width="match_parent"
            android:id="@+id/textView4"
            android:gravity="center_horizontal"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textColor="@color/blueApp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="26dp"
            android:layout_height="wrap_content"
            android:minLines="2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/valueCounterProposalEditText"
            android:background="@drawable/background_edit_text_dialog"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:hint="R$" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="28dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/button_send_dialog"
            android:id="@+id/sendCounterProposalButton"
            android:background="@null" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/button_cancel_dialog"
            android:id="@+id/cancelCounterProposalButton"
            android:background="@null" />
    </LinearLayout>

</LinearLayout>