<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobigap.golawyer.Profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/header_profile_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/headerCellphone"
            android:layout_gravity="top|center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyNotSelected" />

        <include layout="@layout/header_profile_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/headerEmail"
            android:layout_gravity="top|center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyNotSelected" />

        <include layout="@layout/header_profile_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/headerDetailUser"
            android:layout_gravity="top|center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyNotSelected" />

        <include layout="@layout/profile_details_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detailsUser"
            android:layout_gravity="top|center" />

    </LinearLayout>

</RelativeLayout>