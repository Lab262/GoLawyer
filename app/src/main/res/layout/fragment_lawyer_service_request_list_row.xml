<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="mobigap.golawyer.LawyerServiceRequest.LawyerServiceRequestListRow"
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_height="60dp">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/serviceRequestRowProfileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/placeholder_image"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="0" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:baselineAligned="false"
        android:foregroundGravity="center"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Troy Beck"
            android:id="@+id/serviceRequestRowTitle"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informação do pedido"
            android:id="@+id/serviceRequestRowDescription"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:paddingTop="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:maxLines="1" />
    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/serviceRequestAlertImage"
        android:src="@android:drawable/presence_busy"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="0" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/serviceRequestRowSelectorIndicator"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_arrow_select_item"
        android:layout_weight="0"
        android:scaleType="center" />

</LinearLayout>
