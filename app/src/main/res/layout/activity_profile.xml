<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobigap.golawyer.Profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

    <include layout="@layout/register_profile_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/registerProfilePhoto"
        android:layout_gravity="top|center" />

        <include layout="@layout/profile_header_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profileHeader"
            android:layout_gravity="top|center" />

        <include layout="@layout/profile_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileInformation"
            android:layout_gravity="top|center" />


    </LinearLayout>

</ScrollView>
